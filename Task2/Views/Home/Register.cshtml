@model Task2.Model.PersonViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>

    <h4>PersonViewModel</h4>
    <hr />
    <div class="row m-5">
        <div class="col-md-4">
            <form asp-action="register" enctype="multipart/form-data" asp-controller="home">
                <div class="form-group">
                    <label>Image</label>
                    <input asp-for="Person.File" type="file" class="form-control-file">
                </div>
                <div class="form-group">
                    <label>Name</label>
                    <input asp-for="Person.Name" class="form-control" placeholder="Enter Name">
                </div>
                <div class="form-group">
                    <label>Surname</label>
                    <input asp-for="Person.Surname" class="form-control" placeholder="Enter Surname">
                </div>
                <div class="form-group">
                    <label>Age</label>
                    <input asp-for="Person.Age" class="form-control" placeholder="Enter Age">
                </div>

                <button type="submit" class="btn btn-primary">Add</button>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
